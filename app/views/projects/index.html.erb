<div class="span-16">
  
  <h2>Projects</h2>
  
  <div id="projects">
    <%= render :partial => @projects %>
  </div>
  
  <%= will_paginate @projects, :id => 'projects_will_paginate_links' %>
  
</div>

<div class="span-8 last">
  <% owner_area do %>
    <ul class="ActionButton">
      <li class="AddProject"><%= link_to "<span>Add new project</span>", new_user_project_path(current_user), :class => "Button" %></li>
    </ul>
  <% end%>
</div>

<% javascript_tag do %>
  document.observe('dom:loaded', function(){
    new EndlessPage(<%= @projects.total_pages %>, '<%= user_projects_path(@user) %>', 'projects_will_paginate_links', 'spinner');
  });
<% end %>

